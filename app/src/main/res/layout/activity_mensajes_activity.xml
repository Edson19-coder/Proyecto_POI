<?xml version="1.0" encoding="utf-8"?>


<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"



    tools:context=".MainActivity">

    <include layout="@layout/top_bar"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="75dp"
            android:layout_height="75dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="283dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excelente, estan excentos"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="327dp" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JAVIER MARTINEZ SAMANIEGO"
            android:textColor="#207023"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="294dp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="75dp"
            android:layout_height="75dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="90dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CRISTIANO RONALDO"
            android:textColor="#207023"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="198dp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu: Cuando al sayu?"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="231dp" />

        <com.google.android.material.bottomnavigation.BottomNavigationView

            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#116138"


            app:itemIconTint="#a2cac0"
            app:itemTextColor="#A2CAC0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/menu_bottom" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="185dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PEDRO RAMIREZ VILLARREAL"
            android:textColor="#207023"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="103dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu: Aqui va el ultimo mensaje enviado"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="136dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView

        app:itemIconTint="#4CAF50"

        android:layout_gravity="start"

        app:headerLayout="@layout/header_drawer"
        app:menu="@menu/menu_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</androidx.drawerlayout.widget.DrawerLayout>
